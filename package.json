{
  "name": "animeton",
  "version": "0.0.1",
  "type": "module",
  "description": "Anime torrent player",
  "license": "MIT",
  "author": {
    "name": "Tiahui Tech"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tiahui-Tech/webtorrent-animeton.git"
  },
  "sideEffects": false,
  "main": "electron/dist/electron/main/index.js",
  "scripts": {
    "postinstall": "patch-package",
    "build": "tsc -p tsconfig.electron.json",
    "build:vite": "remix vite:build",
    "predist": "npm run build",
    "dist": "electron-builder",
    "dev": "cross-env DEV=1 electron ./electron/main/index.js",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "prestart": "npm run build",
    "start": "electron .",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@nextui-org/react": "^2.4.6",
    "@remix-run/express": "^2.6.0",
    "@remix-run/node": "^2.6.0",
    "@remix-run/react": "^2.6.0",
    "@remix-run/router": "^1.15.0",
    "@remix-run/server-runtime": "^2.6.0",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cross-env": "^7.0.3",
    "electron-log": "^5.2.2",
    "electron-updater": "^6.3.9",
    "framer-motion": "^11.11.15",
    "matroska-metadata": "^1.0.6",
    "mime-types": "^2.1.35",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.14",
    "webtorrent": "^2.5.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.6.0",
    "@types/mime-types": "^2.1.4",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/webtorrent": "^0.110.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "dotenv": "^16.4.7",
    "electron": "^28.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "patch-package": "^8.0.0",
    "typescript": "^5.1.6",
    "vite": "^5.0.0",
    "vite-plugin-top-level-await": "^1.4.4",
    "vite-plugin-wasm": "^3.3.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.tiahui.animeton",
    "productName": "Animeton",
    "icon": "public/favicon.ico",
    "copyright": "Copyright Â© 2024 Tiahui Tech",
    "files": [
      "electron/**/*",
      "public/**/*",
      "node_modules/**/*",
      "!node_modules/@nextui-org/*/src/**/*",
      "!node_modules/@nextui-org/*/dist/src/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "publish": {
      "provider": "github",
      "owner": "Tiahui-Tech",
      "repo": "webtorrent-animeton"
    },
    "win": {
      "signingHashAlgorithms": [
        "sha256"
      ],
      "sign": "./scripts/sign.cjs",
      "target": [
        {
          "target": "nsis-web"
        }
      ],
      "icon": "public/favicon.ico"
    },
    "nsisWeb": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "artifactName": "${productName}-SETUP-v${version}.${ext}",
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "deleteAppDataOnUninstall": true
    },
    "nsis": {
      "artifactName": "${productName}-SETUP-v${version}.${ext}",
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}"
    },
    "msi": {
      "artifactName": "${productName}-INSTALLER-v${version}.${ext}"
    },
    "squirrelWindows": {
      "artifactName": "${productName}-v${version}.${ext}"
    }
  }
}
