{
  "extends": "./tsconfig.base.json",
  "include": [
    "app/**/*",
    "vite.config.ts",
    "electron/shared/**/*",
    "public/vendor/jassub/jassub.es.js"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": [
      "@remix-run/node",
      "node",
      "react/experimental",
      "react-dom/experimental",
      "vite/client"
    ],
    "paths": {
      "@/*": ["./app/*"],
      "@shared/*": ["app/shared/*"],
      "@utils/*": ["app/shared/utils/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@constants/*": ["app/shared/constants/*"],
      "@components/*": ["app/shared/components/*"],
      "@context/*": ["app/context/*"],
      "@stores/*": ["app/stores/*"],
      "@canvas/*": ["app/shared/canvas/*"],
      "@lib/*": ["app/shared/lib/*"],
      "@electron/*": ["electron/shared/*"]
    }
  }
}
